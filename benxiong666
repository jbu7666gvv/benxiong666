    Title = "重力",
    Value = {
        Min = 0.1,
        Max = 500.0,
        Default = 196.2,
    },
    Step = 0.1,
    Callback = function(value)
        safeCall(function()
            game.Workspace.Gravity = value
        end, "设置重力")
