        Title = "清理缓存",
        Desc = "清理系统缓存",
        Callback = function()
            collectgarbage("collect")
            WindUI:Notify({
                Title = "成功", 
                Content = "系统缓存已清理", 
                Duration = 3,
                Color = ColorSystem.successColor
            })
        end
    })
    
