local Players=game:GetService("Players")local LocalPlayer=Players.LocalPlayer local PlayerGui=LocalPlayer:WaitForChild("PlayerGui")local RunService=game:GetService("RunService")local UserInputService=game:GetService("UserInputService")local function createMaintenanceGUI()local screenGui=Instance.new("ScreenGui")screenGui.Name="MaintenanceNotification" screenGui.Parent=PlayerGui screenGui.DisplayOrder=999 local background=Instance.new("Frame")background.Size=UDim2.new(1,0,1,0)background.Position=UDim2.new(0,0,0,0)background.BackgroundColor3=Color3.fromRGB(0,0,0)background.BackgroundTransparency=0.3 background.BorderSizePixel=0 background.Parent=screenGui local frame=Instance.new("Frame")frame.Size=UDim2.new(0.8,0,0.7,0)frame.Position=UDim2.new(0.1,0,0.15,0)frame.AnchorPoint=Vector2.new(0,0)frame.BackgroundColor3=Color3.fromRGB(30,30,30)frame.BorderSizePixel=0 frame.Parent=screenGui local corner=Instance.new("UICorner")corner.CornerRadius=UDim.new(0,20)corner.Parent=frame local dynamicStroke=Instance.new("UIStroke")dynamicStroke.Color=Color3.fromRGB(255,0,0)dynamicStroke.Thickness=8 dynamicStroke.Parent=frame local title=Instance.new("TextLabel")title.Size=UDim2.new(1,0,0,80)title.Position=UDim2.new(0,0,0,0)title.BackgroundColor3=Color3.fromRGB(255,0,0)title.Text="BHBUO脚本维护通知" title.TextColor3=Color3.fromRGB(255,255,255)title.TextScaled=true title.Font=Enum.Font.GothamBlack title.TextSize=36 title.Parent=frame local titleCorner=Instance.new("UICorner")titleCorner.CornerRadius=UDim.new(0,20)titleCorner.Parent=title local dragIcon=Instance.new("ImageLabel")dragIcon.Size=UDim2.new(0,40,0,40)dragIcon.Position=UDim2.new(1,-50,0.5,-20)dragIcon.AnchorPoint=Vector2.new(1,0.5)dragIcon.BackgroundTransparency=1 dragIcon.Image="rbxassetid://3926305904" dragIcon.ImageRectSize=Vector2.new(36,36)dragIcon.ImageRectOffset=Vector2.new(564,284)dragIcon.ImageColor3=Color3.fromRGB(255,255,255)dragIcon.Parent=title local icon=Instance.new("ImageLabel")icon.Size=UDim2.new(0,120,0,120)icon.Position=UDim2.new(0.5,-60,0.2,-60)icon.BackgroundTransparency=1 icon.Image="rbxasset://textures/ui/ErrorIcon.png" icon.ImageColor3=Color3.fromRGB(255,150,50)icon.Parent=frame local content=Instance.new("TextLabel")content.Size=UDim2.new(1,-80,0,200)content.Position=UDim2.new(0,40,0,120)content.BackgroundTransparency=1 content.Text="该脚本维护中，暂不可用 \n\n请稍后再试" content.TextColor3=Color3.fromRGB(255,255,255)content.TextScaled=true content.Font=Enum.Font.GothamBold content.TextSize=28 content.TextWrapped=true content.Parent=frame local countdownText=Instance.new("TextLabel")countdownText.Size=UDim2.new(1,0,0,60)countdownText.Position=UDim2.new(0,0,0,340)countdownText.BackgroundTransparency=1 countdownText.Text="10秒后自动关闭" countdownText.TextColor3=Color3.fromRGB(200,200,200)countdownText.TextScaled=true countdownText.Font=Enum.Font.GothamBold countdownText.TextSize=32 countdownText.Parent=frame local decoration1=Instance.new("Frame")decoration1.Size=UDim2.new(1,0,0,4)decoration1.Position=UDim2.new(0,0,0,320)decoration1.BackgroundColor3=Color3.fromRGB(100,100,100)decoration1.BorderSizePixel=0 decoration1.Parent=frame local decoration2=Instance.new("Frame")decoration2.Size=UDim2.new(1,0,0,2)decoration2.Position=UDim2.new(0,0,0,80)decoration2.BackgroundColor3=Color3.fromRGB(100,100,100)decoration2.BorderSizePixel=0 decoration2.Parent=frame return screenGui,countdownText,dynamicStroke,frame,title end local function startRainbowEffects(stroke,title)local time=0 local connection connection=RunService.Heartbeat:Connect(function(delta)time=time+delta local r=math.sin(time*2)*0.5+0.5 local g=math.sin(time*2+2)*0.5+0.5 local b=math.sin(time*2+4)*0.5+0.5 local rainbowColor=Color3.new(r,g,b)stroke.Color=rainbowColor title.BackgroundColor3=rainbowColor local pulse=math.sin(time*4)*0.8+1.2 stroke.Thickness=6+pulse*2 local brightness=(r+g+b)/3 if brightness>0.6 then title.TextColor3=Color3.fromRGB(0,0,0)else title.TextColor3=Color3.fromRGB(255,255,255)end end)return connection end local function makeDraggable(frame,dragHandle)local dragging=false local dragOffset=Vector2.new(0,0)dragHandle.InputBegan:Connect(function(input)if input.UserInputType==Enum.UserInputType.MouseButton1 or input.UserInputType==Enum.UserInputType.Touch then dragging=true local mousePosition=Vector2.new(input.Position.X,input.Position.Y)local framePosition=Vector2.new(frame.AbsolutePosition.X,frame.AbsolutePosition.Y)dragOffset=mousePosition-framePosition local currentColor=dragHandle.BackgroundColor3 dragHandle.BackgroundColor3=Color3.new(math.max(0,currentColor.R-0.1),math.max(0,currentColor.G-0.1),math.max(0,currentColor.B-0.1))local connection connection=input.Changed:Connect(function()if input.UserInputState==Enum.UserInputState.End then dragging=false connection:Disconnect()end end)end end)local connection connection=UserInputService.InputChanged:Connect(function(input)if dragging and(input.UserInputType==Enum.UserInputType.MouseMovement or input.UserInputType==Enum.UserInputType.Touch)then local mousePosition=Vector2.new(input.Position.X,input.Position.Y)local newPosition=mousePosition-dragOffset frame.Position=UDim2.new(0,newPosition.X,0,newPosition.Y)end end)return connection end local function showMaintenanceWithCountdown()local notificationGUI,countdownText,dynamicStroke,frame,title=createMaintenanceGUI()local rainbowConnection=startRainbowEffects(dynamicStroke,title)local dragConnection=makeDraggable(frame,title)local countdown=10 local function updateCountdown()countdownText.Text=countdown.."秒后自动关闭" countdown=countdown-1 if countdown>=0 then wait(1)updateCountdown()else rainbowConnection:Disconnect()if dragConnection then dragConnection:Disconnect()end notificationGUI:Destroy()end end updateCountdown()end showMaintenanceWithCountdown()
