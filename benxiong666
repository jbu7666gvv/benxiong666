        if Tabs and Tabs.Other then
            -- 更新阻止请求计数显示
            for _, element in pairs(Tabs.Other.Elements or {}) do
                if element and element.Title == "阻止请求" then
                    pcall(function()
                        element:SetDesc("已阻止: " .. tostring(AntiSpySystem.BlockedRequests) .. " 个请求")
                    end)
                end
            end
        end
    end
end)

-- 增强的安全通知功能
local function securityAlert(alertType, details)
    local alertMessages = {
        monitoring_detected = "检测到网络监控软件",
        traffic_intercepted = "网络流量被拦截",
        ssl_anomaly = "SSL证书异常",
        request_tampered = "请求数据被篡改"
    }
    
    local message = alertMessages[alertType] or "安全威胁检测"
    if details then
        message = message .. ": " .. details
    end
    
    warn("[安全警报] " .. message)
    
    if WindUI then
        WindUI:Notify({
            Title = "安全警报",
            Content = message,
            Duration = 8,
            Color = Color3.fromRGB(255, 50, 50)
        })
    end
end

-- 网络请求日志记录（用于调试）
local requestLog = {}
local function logHttpRequest(url, success, responseLength)
    table.insert(requestLog, {
        time = os.time(),
        url = url,
        success = success,
        length = responseLength or 0
    })
    
    -- 只保留最近50条记录
    if #requestLog > 50 then
        table.remove(requestLog, 1)
    end
end

-- 增强的HTTP监控
local originalHttpGet = game.HttpGet
game.HttpGet = function(url, ...)
    local startTime = os.clock()
    local success, result = pcall(function()
        return originalHttpGet(url, ...)
    end)
    
    local endTime = os.clock()
    local responseTime = endTime - startTime
    
    -- 记录请求
    logHttpRequest(url, success, success and #result or 0)
    
    -- 检测异常响应时间
    if responseTime > 10 then -- 超过10秒认为是异常
        warn("[网络监控] 请求响应时间异常: " .. tostring(url) .. " - " .. string.format("%.2f", responseTime) .. "秒")
    end
    
    -- 检测空响应或异常响应
    if success and result then
        if #result == 0 then
            warn("[网络监控] 空响应: " .. url)
        elseif #result < 100 and string.find(result, "error") then
            warn("[网络监控] 错误响应: " .. url)
        end
    end
    
    return success and result or ""
end

-- 定期安全报告
task.spawn(function()
    wait(300) -- 每5分钟生成一次安全报告
    
    while true do
        local blockedCount = AntiSpySystem.BlockedRequests
        local detectionCount = AntiSpySystem.DetectionCount
        
        if blockedCount > 0 or detectionCount > 0 then
            local report = string.format(
                "安全报告: 已阻止 %d 个请求, 检测到 %d 次威胁",
                blockedCount, detectionCount
            )
            
            warn("[安全报告] " .. report)
            
            if WindUI and (blockedCount > 5 or detectionCount > 3) then
                WindUI:Notify({
                    Title = "安全报告",
                    Content = report,
                    Duration = 10,
                    Color = Color3.fromRGB(255, 165, 0)
                })
            end
        end
        
        wait(300) -- 等待5分钟
    end
end)

